# Security headers configuration
# Note: GitHub Pages doesn't support custom headers, but this file
# can be used when migrating to other hosting platforms like Netlify, Cloudflare Pages, etc.

/*
  # Content Security Policy - restrict resource loading to trusted sources
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://polyfill.io https://unpkg.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdn.jsdelivr.net; img-src 'self' data: https:; connect-src 'self' https:; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'none';
  
  # Prevent clickjacking attacks
  X-Frame-Options: DENY
  
  # Block MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Enable XSS protection
  X-XSS-Protection: 1; mode=block
  
  # Force HTTPS connections
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Control referrer information
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Disable potentially dangerous features
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), gyroscope=(), magnetometer=()
  
  # Cache control for security
  Cache-Control: public, max-age=31536000, immutable

# Specific security for API endpoints or sensitive paths
/docs/api/*
  Content-Security-Policy: default-src 'none'; frame-ancestors 'none';
  X-Frame-Options: DENY
  
/docs/admin/*
  Content-Security-Policy: default-src 'self'; script-src 'self'; style-src 'self'; frame-ancestors 'none';
  X-Frame-Options: DENY